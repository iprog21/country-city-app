<div class="row">
  <div class="col-lg-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Greetings Sample
      </div>
      <div class="card-body">
        <%= form_tag() do -%>
        <div class="form-group">
          <label for="countries">Country: </label>
          <%= select_tag :country, options_for_select(CS.countries.map { |c| [c[1], c[0]] } ), class: 'form-control' %>
        </div>
    
        <div class="form-group">
          <label for="countries">City: </label>
          <%= select_tag :cities, options_for_select([]), class: 'form-control' %>
        </div>
        
    
        <% end -%>
      </div>
      <div class="card-footer">
        
      </div>
    </div>
  </div>
</div>
